<form class="edit-post">
  <div class="form-group">
    <label for="title">Edit Your Post Here</label>
    <textarea class="form-control" id="title" rows="1">{{post.title}}</textarea>
  </div>
  <div class="form-group">
    <textarea class="form-control" id="postBody" rows="3">{{post.body}}</textarea>
  </div>
  <div class="form-group">
  <button id="saveChanges" type="submit" class="btn btn-info mb-2">Save Changes</button>
  </div>
</form>

<script src="/js/editpost.js"></script>