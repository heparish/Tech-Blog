<div class="update-form">
	<div class="container">
		<div class="row">

			<h1>
				edit POST {{name}}, id: <span id="pUpId">{{ id }}</span>
			</h1>

			<form class="update-form">
        
				<div class="mb-3">
					<label for="title" class="form-label">Post Title</label>
					<textarea type="text" class="form-control" id="title" placeholder="{{ title }}" rows="1">{{ title }}</textarea>
				</div>

				<div class="mb-3">
					<label for="content" class="form-label">Post Content</label>
					<textarea class="form-control" id="content" placeholder="{{ content }}" rows="10">{{ content }}</textarea>
				</div>

				<button type="submit" value="Submit" id="submitEdit">
					Submit Update
				</button>

			</form>

		</div>
	</div>
</div>

<script src="/js/editPost.js"></script>