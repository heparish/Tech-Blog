<form class="create-post">
  <div class="form-group">
    <label for="title">Write all your thoughts and feelings below:</label>
    <input id="title" class="form-control" type="text">
  </div>
  <div class="form-group">
    <textarea class="form-control" id="postContent" rows="3" placeholder="Start writing here"></textarea>
  </div>
  <div class="form-group">
  <button id="submitPost" type="submit" class="btn btn-info mb-2">Submit Post</button>
  </div>
</form>

<script src="/js/createpost.js"></script>